@import 'nib'

.flipbook.theme-dark
  font-family "Helvetica Neue", Helvetica, Sans-Serif
  color: #DDD
  color: #FFF
  background-color: #222
  border-radius top 4px
  border-radius bottom 3px
  box-shadow: 0px 2px 4px #999

  &:focus
    color: #FFF

  .button
    color: #CCC
    border-radius: 4px
    &.disabled
      opacity: 0.3
    &.down
      background: #393939

  header
    background none
    padding 5px
    h3
      padding-left 5px
      text-shadow: 0px -2px 0px #000
      span
        color: #AAA

  .screen-stack

    .errors
      padding: 25px
      text-align: center
      color: #900
      border: 0
      background-color #FFF
      border: 1px solid #000

    .screen
      background-color: #000

      &.content-screen
        background: rgba(0,0,0,0.7)
        color: white
        text-align center


  footer
    background none

    &.copyright
      background #000
      border-bottom 1px solid #333
      color: #555

    &.pager
      border-radius bottom 4px
  
      .progress

        .bar
          border-radius: left 6px


          &.done
            border-radius: 6px
            border: 0
          
          &.background
            border-radius: 6px
            background #000

          &.loading
            background-color: #3F3F3F
            
            &.done
              background-color: #1a1a1a

          &.location
            background-color: #444
            border-right: 1px solid #000
            background: linear-gradient(top, #444, #333)
            span
              background-color: #000

          &.position
            color: #777
            text-shadow: 0px -1px 0px #000

  &.zoomed
    border-radius: 0
    header
      margin 0
      border-radius: 0
    footer
      margin 0
      border-radius: 0
    .screen
      background-color: #000
  
  &.isDesktop
    .button
      &:hover
        background: #393939
      &.disabled
        &:hover
          background: none

