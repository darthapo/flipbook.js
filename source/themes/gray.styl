@import 'nib'

.flipbook.theme-gray
  font-family "Helvetica Neue", Helvetica, Sans-Serif
  color: #555
  color: #000

  &:focus
    color: #000

  .button
    color: #666
    border-radius: 4px
    &.disabled
      opacity: 0.3
    &.down
      background: #BBB

  header
    border-top 1px solid #DDD
    background #CCC
    border-radius top 4px
    margin 0 4px 
    padding 5px
    h3
      padding-left 5px
      text-shadow: 0px 1px 0px #EEE
      span
        color: #888

  .screen-stack
    box-shadow: 0px 2px 9px #777

    .errors
      padding: 25px
      text-align: center
      // border: 1px solid red
      border: 0

    .screen

      &.the-end
        background: rgba(0,0,0,0.7)
        color: white
        text-align center


  footer
    background #CCC
    margin 0 4px 

    &.copyright
      background #BBB
      color: #777
      text-shadow: 0px 1px 0px #EEE

    &.pager
      border-radius bottom 4px
      border-top 1px solid #DDD
      border-bottom: 1px solid #BBB
  
      .progress

        .bar
          border-radius: left 6px

          &.done
            border-radius: 6px
            border: 0
          
          &.background
            border-radius: 6px
            background #AAA

          &.loading
            background-color: #BBB

          &.location
            background-color: #ccc
            background: linear-gradient(top, #DDD, #AAA)
            border-right: 1px solid #AAA

          &.position
            color: #777
            text-shadow: 0px 1px 0px #DDD
  &.zoomed
    background-color: #FFF
    background-color #EFEFEF

    header
      margin 0
      border-radius: 0
    .screen-stack
      box-shadow: none
    footer
      margin 0
      border-radius: 0

  &.isDesktop
    .button
      &:hover
        background: #E0E0E0
      &.disabled
        &:hover
          background: none
      &.down:hover
        background: #B9B9B9
